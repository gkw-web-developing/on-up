generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ProductImage {
  main   String
  others String[]
}

model products {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  title          String       @unique
  slug           String       @unique
  price          Float
  image          ProductImage
  category       String[]
  qualifications String[]
  description    String
}

model users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  email       String   @unique
  password    String
  permissions String   @default("USER")
  createdAt   DateTime @default(now())
  billing     billing?
}

model billing {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  userId   String  @unique @db.ObjectId
  user     users   @relation(fields: [userId], references: [id])
  name     String
  surname  String
  street   String
  building String
  flat     String?
  nip      String?
  city     String
  zip      String
  country  String
}
